#------------------------------------SCREEN 1 MAIN PAGE --------------------------------------
<MainScreen@Screen>:
    name: 'Mainwindow'
    FloatLayout:
        Image:
            source: 'images/SZA.png'
            allow_stretch: True
            keep_ratio: False
            size_hint: None, None
            size: 800,1150
            pos_hint: {'right':1, 'y': -0.15}

        Image:
            source: 'images/pinkbg.png'
            allow_stretch: True
            keep_ratio: False
            size_hint: None, None
            size: 1120,1000
            pos_hint: {'x':0, 'y': 0}

        Image:
            source: 'images/dashboard.png'
            allow_stretch: True
            keep_ratio: False
            size_hint: None, None
            size: 700,63
            pos_hint: {'x':0.07, 'y': 0.89}

        Widget:       #for opacity of bg image
            size_hint: 1, 1
            pos_hint: {'x': 0, 'y': 0}
            canvas.before:
                Color:
                    rgba: 0.980, 0.973, 0.965, 0
                Rectangle:
                    pos: self.pos
                    size: self.size

        RelativeLayout:
            size_hint: None,None
            size: self.size
            pos_hint: {'x': 0, 'y': 0.64}

            canvas.before:
                #TEXT INPUT
                Color:
                    rgba: 0, 0, 0, 0.2
                RoundedRectangle:
                    pos: 152 + 2, -193 - 2
                    size: 400, 45
                    radius: [2]

                #LOGIN
                Color:
                    rgba: 0, 0, 0, 0.2
                RoundedRectangle:
                    pos: 152 + 2, -123 - 2
                    size: 220, 60
                    radius: [18]

                #SUBMIT
                Color:
                    rgba: 0, 0, 0, 0.2
                RoundedRectangle:
                    pos: 152 + 2, -323 - 2
                    size: 220, 60
                    radius: [18]

            Label:
                markup: True 
                text: "[color=#6F2A2A]SPOTIFY[/color]  APP\nRECOMMENDATION"
                font_name: "fonts/static/Inter_24pt-ExtraBold.ttf"
                font_size: "33sp"
                x: 150
                y: 50
                size_hint: None, None
                size: self.texture_size
                color: 0, 0, 0, 1
        
            Label:
                markup: True
                text: "Find the soundtrack to your story, where your mood meets melodyâ€” \none song, one feeling at a time"
                font_name: "fonts/static/Inter_24pt-Medium.ttf"
                font_size: "16sp"
                x: 150
                y: -20
                size_hint: None, None
                size: self.texture_size
                color: 0, 0, 0, 1

            BasicButtonHover:
                text: "Home"
                font_name: "tracksfont/Noto_Sans_JP/static/NotoSansJP-Medium.ttf"
                font_size: "19sp"
                size_hint: None, None
                x: 200
                y: 255
                size: self.texture_size
                color: 0,0,0,1
                background_color: 0, 0, 0, 0
                background_normal: ''
                on_release:
                    app.root.current = "Mainwindow"

            BasicButtonHover:
                text: "About us"
                font_name: "tracksfont/Noto_Sans_JP/static/NotoSansJP-Medium.ttf"
                font_size: "19sp"
                size_hint: None, None
                x: 400
                y: 255
                size: self.texture_size
                color: 0,0,0,1
                background_color: 0, 0, 0, 0
                background_normal: ''
                on_release: app.show_about_us()

            BasicButtonHover:
                text: "Contact"
                font_name: "tracksfont/Noto_Sans_JP/static/NotoSansJP-Medium.ttf"
                font_size: "19sp"
                size_hint: None, None
                x: 650
                y: 255
                size: self.texture_size
                color: 0,0,0,1
                background_color: 0, 0, 0, 0
                background_normal: ''
                on_release: app.show_contact()

            TextInput:
                id: redirect_input
                font_name: "fonts/static/Inter_18pt-Regular.ttf"
                hint_text: "Paste redirect url here"
                size_hint: None, None
                size: 400, 45
                x: 150
                y: -190
                font_size: 18
                multiline: True
                foreground_color: 0, 0, 0, 1        
                cursor_color: 0, 0, 0, 1             
                background_color: 1, 1, 1, 1         
                background_normal: ''
                background_active: ''
                padding: [10, 10, 10, 10]

            Label:
                text: "Heads up! This link works only once, so make sure to paste it here right after logging in."
                font_name: "tracksfont/Inter/static/Inter_18pt-Italic.ttf"
                font_size: 17
                size_hint: None, None
                size: self.texture_size
                x: 180
                y: -235
                color: 0, 0, 0, 1

            Image:
                source: 'images/info.png'
                allow_stretch: True
                keep_ratio: False
                size_hint: None, None
                size: 19,19
                pos_hint: {'x':1.5, 'y': -2.33}

            HoverButton:
                text: "LOGIN"
                font_name: "fonts/static/Inter_18pt-Bold.ttf"
                size_hint: None, None
                font_size: 19
                x: 150
                y: -120
                size: 220, 60
                background_color: 0, 0, 0, 0
                background_normal: ''
                background_down: ''
                on_release: app.spotify_login()

                canvas.before:
                    Color:
                        rgba: self.bg_color
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: self.radius 

            HoverButton:
                text: "SUBMIT"
                font_name: "fonts/static/Inter_18pt-Bold.ttf"
                size_hint: None, None
                font_size: 21
                x: 150
                y: -320
                size: 220, 60
                background_color: 0, 0, 0, 0
                background_normal: ''
                background_down: ''
                on_release:
                    app.check_redirect()

                canvas.before:
                    Color:
                        rgba: self.bg_color
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: self.radius

