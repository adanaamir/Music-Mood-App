<TrackCard>:
    size_hint: None, None
    size: 330, 60
    orientation: 'horizontal'
    spacing: 10
    padding: [15, 0, 15, 0]
    canvas.before:
        Color:
            rgba:  0.3608, 0.2039, 0.2039, 1
        RoundedRectangle: 
            pos: self.pos
            size: self.size
            radius: [20]

    Label:
        id: track_label
        text: ""
        font_name: "fonts/static/Inter_24pt-Medium.ttf"
        font_size: 20
        halign: 'left'
        valign: 'middle'
        text_size: self.size
        size_hint_x: 1
        height: self.texture_size[1]
        color: 1,1,1,1
        
    BasicButtonHover:
        id: spotify_button
        size_hint: None, None
        size: 70, 70
        background_normal: 'images/spotify.png'
        background_down: 'images/spotify.png'
        background_color: 1, 1, 1, 1

