                    on_ref_press: app.open_link(args[1])
                    color: 1, 1, 1, 1
                    font_name: "Cardo/Cardo-Regular.ttf"

                    size_hint_x: None  
                    width: dp(900)                 # Set a fixed width
                    text_size: self.width, None        # Prevents breaking into lines
                    shorten: True                      # Shortens text with "..." if too long
                    shorten_from: "right"             #Cut text from the right
