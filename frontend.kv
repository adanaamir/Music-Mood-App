#:kivy 2.3.1
WindowManager:
    MainScreen:
    Dashboard:
    Screen1:
    Screen2:
    Screen3:

#------------------------------------SCREEN 1 MAIN PAGE --------------------------------------
<MainScreen@Screen>:
    name: 'Mainwindow'
    FloatLayout:
        Image:
            source: 'images/MacBook Air - 3.png'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1,1
            pos_hint: {'x': 0, 'y': 0}

        Widget:       #for opacity of bg image
            size_hint: 1, 1
            pos_hint: {'x': 0, 'y': 0}
            canvas.before:
                Color:
                    rgba: 0.980, 0.973, 0.965, 0
                Rectangle:
                    pos: self.pos
                    size: self.size

        RelativeLayout:
            size_hint: None,None
            size: self.size
            pos_hint: {'x': 0, 'y': 0.64}

            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.2
                RoundedRectangle:
                    pos: 80 + 2, -62 - 2
                    size: 400, 45
                    radius: [2]

                Color:
                    rgba: 0, 0, 0, 0.2
                RoundedRectangle:
                    pos: 80 + 2, 5 - 2
                    size: 220, 60
                    radius: [3]

                Color:
                    rgba: 0, 0, 0, 0.2
                RoundedRectangle:
                    pos: 80 + 2, -152 - 2
                    size: 220, 60
                    radius: [3]

            Label:
                markup: True     #for enablng colors for specific post
                text: "WELCOME  T0  [color=#AD3939]SPOTIFY[/color]\nRECOMMENDATION  APP"
                font_name: "fonts/static/Inter_24pt-ExtraBold.ttf"
                font_size: "26sp"
                x: 80
                y: 160
                size_hint: None, None
                size: self.texture_size
                color: 0.067, 0.094, 0.153, 1
        
            Label:
                text: "Discover music you'll love"
                font_name: "fonts/static/Inter_24pt-Medium.ttf"
                font_size: "18sp"
                x: 80
                y: 80
                size_hint: None, None
                size: self.texture_size
                color: 0.067, 0.094, 0.153, 1

            Label:
                text: "Home"
                font_name: "fonts/static/Inter_24pt-Medium.ttf"
                font_size: "19sp"
                x: 1300
                y: 230
                size_hint: None, None
                size: self.texture_size
                color: 0.067, 0.094, 0.153, 1

            Label:
                text: "About us"
                font_name: "fonts/static/Inter_24pt-Medium.ttf"
                font_size: "19sp"
                x: 1700
                y: 230
                size_hint: None, None
                size: self.texture_size
                color: 0.067, 0.094, 0.153, 1

            Label:
                text: "Contact"
                font_name: "fonts/static/Inter_24pt-Medium.ttf"
                font_size: "19sp"
                x: 1500
                y: 230
                size_hint: None, None
                size: self.texture_size
                color: 0.067, 0.094, 0.153, 1

            TextInput:
                id: redirect_input
                font_name: "fonts/static/Inter_18pt-Regular.ttf"
                hint_text: "Paste redirect url here"
                size_hint: None, None
                size: 400, 45
                x: 80
                y: -60
                font_size: 18
                multiline: True
                foreground_color: 0, 0, 0, 1        
                cursor_color: 0, 0, 0, 1             
                background_color: 1, 1, 1, 1         
                background_normal: ''
                background_active: ''
                padding: [10, 10, 10, 10]

            HoverButton:
                text: "LOGIN"
                font_name: "fonts/static/Inter_18pt-Bold.ttf"
                size_hint: None, None
                font_size: 19
                x: 80
                y: 7
                size: 220, 60
                background_color: 0.529, 0.012, 0.361, 1
                on_release: app.spotify_login()

            HoverButton:
                text: "SUBMIT"
                size_hint: None, None
                font_size: 21
                x: 80
                y: -150
                font_name: "fonts/static/Inter_18pt-Bold.ttf"
                size: 220, 60
                background_color: 0.529, 0.012, 0.361, 1
                on_release:
                    app.check_redirect()

